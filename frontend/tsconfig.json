{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "es2022",
    "jsx": "react",
    "allowImportingTsExtensions": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noEmit": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/backend/*": [
        "../backend/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/*.ts",
    "src/*.tsx",
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
