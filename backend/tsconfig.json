{
    "compilerOptions": {
        "target": "es2022",                       
        "module": "nodenext",                     
        "moduleResolution": "nodenext",        
        "lib": ["es2022", "DOM"],                 
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,                  
        "resolveJsonModule": true,                
        "skipLibCheck": true,
        "allowJs": false,
        "outDir": "./dist"
    },
    "include": ["./**/*.ts", "./*.ts"],
    "exclude": ["node_modules", "dist"]
}
