{
    "compilerOptions": {
        "target": "ES2020",                       
        "module": "CommonJS",                     
        "moduleResolution": "Node",               
        "lib": ["ES2020", "DOM"],                 
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,                  
        "resolveJsonModule": true,                
        "skipLibCheck": true                       
    },
    "include": ["./**/*.ts", "./*.ts"],
    "exclude": ["node_modules", "dist"]
}